@using YE

@model List<_04___TheBigBark_WebUI.Models.UserModel>

@{
    ViewBag.Title = "ShowAllUsers";
}

<h2>All Users</h2>

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<table border="1" align="center">
    <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>User ID</th>
        <th>Phone Number</th>
        <th>Appointments</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.Id</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Appointments</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
        }
</table>